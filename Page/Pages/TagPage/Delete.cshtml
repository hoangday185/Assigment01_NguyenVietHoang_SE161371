@page
@model Page.Pages.TagPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Tag</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag.TagName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag.TagName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag.Note)
        </dd>
    </dl>
    
    <form method="post">
        
        @* <input type="submit" value="Delete" class="btn btn-danger" /> | *@
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Delete
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        @* <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1> *@
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure to delete this tag?
                    </div>
                    <div class="modal-footer">

                        <input type="hidden" asp-for="Tag.TagId" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" value="Delete"class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </div>
        </div>
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
